<h1>Employees</h1>
<form>
  <label for="Search by name">Search by employee name:</label>
  <input type="text" name="search" >
  <button type="submit" name="button">go</button>
</form>

<% if @employees.any? %>
  <ul>
    <% @employees.each do |employee| %>
      <li><%= link_to employee.name, employee_path(employee) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no employees yet.</p>
<% end %>


<p><%= link_to "Create new employee", new_employee_path %></p>
