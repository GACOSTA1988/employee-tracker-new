<h1>Division: <%= @division.name %></h1>
<h2>Employee: <%= @employee.name %></h2>
<h3><%= @division.lyrics %></h3>

<p><%= link_to "Edit division", edit_employee_division_path(@employee, @division) %></p>
<p><%= link_to "Delete division", employee_division_path(@employee, @division),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to employee", employee_path(@employee) %></p>
